{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "$features/*": ["./src/features/*"],
      "$ui/*": ["./src/ui/*"],
      "$libs/*": ["./src/libs/*"],
      "$api/*": ["./src/api/*"],
      "$services/*": ["./src/services/*"],
      "$types/*": ["./src/types/*"],
      "$hooks/*": ["./src/hooks/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "nativewind-env.d.ts"]
}
